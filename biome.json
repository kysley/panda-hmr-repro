{
  "$schema": "https://biomejs.dev/schemas/1.0.0/schema.json",
  "formatter": {
    "enabled": true
  },
  "files": {
    "ignore": ["node_modules", "dist/*"]
  },
  "organizeImports": {
    "enabled": false
  },
  "linter": {
    "enabled": true,
    "rules": {
      "a11y":{
        "noSvgWithoutTitle":"warn"
      },
      "recommended": true
    }
  }
}
